{% extends 'backoffice/layout.html.twig' %}

{% block title %}Character index
{% endblock %}

{% block content %}
    <h1>Character index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Gender</th>
                <th>Bio</th>
                <th>Age</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for character in characters %}
                <tr>
                    <td>{{ character.id }}</td>
                    <td>{{ character.firstname }}</td>
                    <td>{{ character.lastname }}</td>
                    <td>{{ character.gender }}</td>
                    <td>{{ character.bio }}</td>
                    <td>{{ character.age }}</td>
                    <td>
                        <img src="{{ asset('uploads/' ~ character.image) }}" width="100" alt="Image du personnage {{ character.firstname }}">
                    </td>
                    <td>
                        <a href="{{ path('backoffice_character_show', {'id': character.id}) }}">show</a>
                        <a href="{{ path('backoffice_character_edit', {'id': character.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backoffice_character_new') }}">Create new</a>
{% endblock %}
